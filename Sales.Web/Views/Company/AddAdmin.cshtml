@model Sales.Web.Models.AddAdminViewModel
@{
    ViewBag.Title = "Add Admin";
}

@using (Html.BeginForm("AddAdmin", "Company", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <p class="unique_big_green_text">Add Admin:</p>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-2 control-label">Admin Name</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.AdminName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <input type="hidden" value="@ViewBag.CompanyId" name="CompanyId" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-success active active-without-shadow" value="Save" />
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
